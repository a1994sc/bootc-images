{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "assignees": [
    "@A1994SC"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchPackageNames": ["quay.io/fedora/fedora-bootc"],
      "enabled": false
    },
    {
      "matchPackageNames": ["registry.redhat.io/rhel9/rhel-bootc"],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)-(?<patch>\\d+)$"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "Containerfile$",
        ".github/workflows/build_iso_fedora.yml$"
      ],
      "matchStrings": [
        "FROM quay.io/fedora/fedora-bootc:(?<currentValue>\\S+)",
        " +image: quay.io/fedora/fedora:(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "fedora",
      "datasourceTemplate": "custom.fedora-stable"
    }
  ],
  "customDatasources": {
    "fedora-stable": {
      "defaultRegistryUrlTemplate": "https://fedoraproject.org/releases.json",
      "transformTemplates": [
        "{\"releases\": [{\"version\": $$[0].version}]}"
      ]
    }
  }
}
